<div class="login-box">
  <!-- /.login-logo -->
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>Admin</b>LTE</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-user"></span>
      </div>
    </div>
  </div>

  <div class="input-group mb-3">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
    <% if devise_mapping.rememberable? %>
      <div class="icheck-primary">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </div>
    <!-- /.col -->
    <div class="col-4">
      <%= button_tag "Sign in", class: "btn btn-primary btn-block" %>
    </div>
    <!-- /.col -->
  </div>
<% end %>

      <%= render "devise/shared/links" %>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
