<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title">Daftar Pengguna</h3>
  </div>
  <div class="card-body">
    <table id="datatable_with_search" class="table table-bordered table-hover">
      <thead>
      <tr>
        <th>Username</th>
        <th>Nama Lengkap</th>
        <th>Group</th>
        <th></th><th></th>
      </tr>
      </thead>
      <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= link_to user.username, admin_user_path(user) %></td>
          <td><%= user.fullname %></td>
          <td><%= user.group.name %></td>
          <td style="text-align:right">
            <%= link_to edit_admin_user_path(user) do %>
              <%= button_tag("Edit", class: "btn btn-primary", type: "button", disabled: user.first_sysadmin?) %>
            <% end %>
          </td>
          <td>
            <%= button_to("Delete", admin_user_path(user), method: :delete, data: { "turbo-confirm": "Are you sure?" }, 
                class: "btn btn-danger", type: "button", disabled: user.first_sysadmin?) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <!-- ./card-body -->
</div>
<!-- ./card -->
