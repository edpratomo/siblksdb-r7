<%= turbo_stream.replace(dom_id(@invoice)) do %>
  <%= render 'invoices/status', invoice: @invoice %>
<% end %>
<% if @refunds_count %>
  <%= turbo_stream.replace("refunds-count") do %>
    <%= refunds_count_badge %>
  <% end %>
<% end %>
<%= turbo_stream.replace("flash_messages") do %>
  <div id="flash_messages"><%= render "flash_toastr" %></div>
<% end %>
