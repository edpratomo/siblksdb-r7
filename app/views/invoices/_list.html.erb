<div class="card" id="filterrific_results">
  <div class="card-header">
    <h3 class="card-title">Responsive Hover Table</h3>
    <div class="card-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
        <div class="input-group-append">
          <button type="submit" class="btn btn-default">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th>Kepada</th>
        <th>Tanggal</th>
        <th>Status</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @invoices.each do |invoice| %>
      <tr class="invoice_row" >
        <td><%= link_to invoice.id, invoice %></td>
        <td><%= link_to invoice.invoiceable.name, invoice.invoiceable %></td>
        <td><%= invoice.created_at %></td>
        <td><span class="tag tag-success"><%= invoice.paid ? "Lunas" : "Belum Lunas" %></span></td>
        <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-lg-<%= invoice.id %>">
          Rincian
            </button>
        </td>
      </tr>
            
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% @invoices.each do |invoice| %>
<%= render 'modal', invoice: invoice %>
<% end %>
      