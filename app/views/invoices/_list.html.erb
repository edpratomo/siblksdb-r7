<div class="card" id="filterrific_results">
  <div class="card-header">
    <div class="card-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
        <div class="input-group-append">
          <button type="submit" class="btn btn-default">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th>Atas Nama</th>
        <th>Tempat, Tanggal Lahir</th>
        <th>Tanggal</th>
        <th>Kurang Bayar</th>
        <th></th>
      </tr>
      </thead>
      <tbody data-controller="payment-modal">
      <% @invoices.each do |invoice| %>
      <tr class="invoice_row" >
        <td><%= link_to invoice.id, invoice %></td>
        <td><%= link_to invoice.invoiceable.name, invoice.invoiceable %> 
            <% if invoice.invoiceable.is_a?(Admission) %>
            <span class="badge bg-success">admisi</span>
            <% end %>
        </td>
        <td><%= invoice.invoiceable.birthplace %>, <%= invoice.invoiceable.birthdate %></td>
        <td><%= invoice.created_at %></td>
        <td>
          <%= render 'status', invoice: invoice %>
        </td>
        <td>
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modal-lg-<%= invoice.id %>">
            Rincian
            </button>
        </td>
      </tr>
            
      <% end %>
      </tbody>
    </table>
    
  </div>
  <!-- /.card-body -->
  <div class="card-footer">
  <%= will_paginate invoices %>
</div>

<% @invoices.each do |invoice| %>
<%= render 'modal', invoice: invoice %>
<%#= render 'payment_modal', invoice: invoice, payment: payment %>
<% end %>
