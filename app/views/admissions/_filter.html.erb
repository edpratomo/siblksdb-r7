<%= form_for_filterrific @filterrific, html: { class: "form-horizontal", role: "form", "data-controller": "filter", "data-action": "change->filter#submit", "data-filter-target": "admissionFilter" } do |f| %>
<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title">Pendaftaran Calon Siswa</h3>
  </div>
  <div class="card-body">

    <div class="form-group row">
      <%= f.label :sorted_by, "Urutkan", class: "control-label col-sm-3" %>
      <div class="col-sm-6">
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, {:class => "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :with_created_at_gt, "Terdaftar sebelum", class: "control-label col-sm-3" %>
      <div class="col-sm-6">
        <div class="input-group date" id="admission_before" data-target-input="nearest">
          <%= f.text_field :with_created_at_lt, { sclass: "form-control datetimepicker-input", "data-target": "#admission_before" } %>
          <div class="input-group-append" data-target="#admission_before" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :with_created_at_gt, "Terdaftar setelah", class: "control-label col-sm-3" %>
      <div class="col-sm-6">
        <div class="input-group date" id="admission_after" data-target-input="nearest">
          <%= f.text_field :with_created_at_gt, { sclass: "form-control datetimepicker-input", "data-target": "#admission_after" } %>
          <div class="input-group-append" data-target="#admission_after" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  <!-- ./card-body -->
  <div class="card-footer">
    <div>
      <%= link_to('Reset filters', reset_filterrific_url) %>
    </div>
    <%# add an automated spinner to your form when the list is refreshed %>
    <%= render_filterrific_spinner %>
  </div>
  <!-- ./card-footer -->
</div>
<!-- ./card -->
<% end %>
