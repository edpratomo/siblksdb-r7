<%= form_for_filterrific @filterrific, html: { class: "form-horizontal", role: "form" }, data: { controller: "filter" } do |f| %>
<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title">Pendaftaran Peserta Kursus</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :sorted_by, "Urutkan", class: "control-label" %>
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, 
              {class: "form-control", data: { action: "change->filter#submit", "filter-target": "filterParams" }}) %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :with_created_at_gt, "Terdaftar sebelum", class: "control-label" %>
          <div class="input-group date" data-target-input="nearest" data-controller="datepicker">
            <%= f.text_field :with_created_at_lt, { name: "filterrific[with_created_at_lt]", class: "form-control",
                data: { "datepicker-target": "input", "filter-target": "datePicker", action: "change->filter#submit" } } %>
            <div class="input-group-append" data-datepicker-target="toggle">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :with_created_at_gt, "Terdaftar setelah", class: "control-label" %>
          <div class="input-group date" data-target-input="nearest" data-controller="datepicker">
            <%= f.text_field :with_created_at_gt, { name: "filterrific[with_created_at_gt]", class: "form-control",
                data: { "datepicker-target": "input", "filter-target": "datePicker", action: "change->filter#submit" } } %>
            <div class="input-group-append" data-datepicker-target="toggle">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ./card-body -->
  <%#= render 'filter_footer' %>
</div>
<!-- ./card -->
<% end %>
